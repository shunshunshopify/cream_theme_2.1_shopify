                    <variant-radios
                    class="no-js-hidden"
                    data-section="{{ section.id }}"
                    data-url="{{ card_product.url }}"
                    data-unique="variant-radio-item-{{ card_product.id }}"
                    {{ block.shopify_attributes }}
                  >
           {%- for option in card_product.options_with_values -%}
